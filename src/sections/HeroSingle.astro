---
interface Props {
  title: string;
  subTitle?: string;
  image?: string;
}

const { title, subTitle, image } = Astro.props;
---

<section class="flex justify-center flex-col mt-48 mb-24">
  <div class="md:w-1/2 mx-auto" data-aos="fade-up">
    <h1
      class="text-4xl leading-tight text-center font-semibold md:text-5xl md:leading-tight uppercase"
    >
      {title}
    </h1>
    {
      subTitle && (
        <h2 class="mt-10 text-lg text-center opacity-80 md:text-2xl">
          {subTitle}
        </h2>
      )
    }
  </div>
  {
    image && (
      <img
        src={image}
        alt={title}
        class="max-w-3xl mx-auto w-full rounded-2xl mt-24"
      />
    )
  }
</section>
