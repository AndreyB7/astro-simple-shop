---
import type { BrandsData } from "@/config/landing.interface";
import { marked } from 'marked';
import { ASSET_PREFIX } from "../config/constants";
import SectionTitle from "../components/SectionTitle.astro";

interface Props {
	data: BrandsData;
}

const { data } = Astro.props;
---

<section
	id="about-section"
	class="scroll-m-32 flex flex-col justify-between gap-y-10 md:gap-y-0 md:gap-x-7 md:flex-row mb-20 w-full text-center"
>
	<div class="w-11/12 m-auto flex flex-col gap-y-6">
		<div class="flex justify-center" data-aos="fade-up">
			<img src={ASSET_PREFIX + data.image} alt={data.image} class="w-64 h-64 relative rounded-full border-2 border-primary object-cover z-10" />
		</div>
		<SectionTitle>{data.title}</SectionTitle>
		<div class="text-lg text-center md:text-xl" data-aos="fade-up" set:html={marked.parse(data.description)}>
		</div>
	</div>
</section>
