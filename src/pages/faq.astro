---
import type { Seo } from "@/config/landing.interface";
import Layout from "../layouts/Layout.astro";
import FAQ from "../sections/FAQ.astro";
import Footer from "../sections/Footer.astro";
import Header from "../sections/Header.astro";
import HeroSingle from "../sections/HeroSingle.astro";
import { getLandingData } from "../services/data.service";

const data = await getLandingData();
const seo: Seo = {
	title: 'Часто задаваемы вопросы при заказе защитных пленок AliasevPro',
	description: 'Ответы на частые вопросы покупателей нашего магазина автомобильных защитных пленок.'
}
---
<Layout meta={ data.meta } seo={seo}>
    <Header data={ data.headerData }/>
    <main class="flex flex-col justify-center items-center">
        <div class="w-11/12 md:w-3/4">
            <HeroSingle
              title="Часто задаваемые вопросы"
              subTitle="Ответы на вопросы наших покупателей"
            />
            <FAQ />
        </div>
        <Footer data={ data.footerData }/>
    </main>
</Layout>